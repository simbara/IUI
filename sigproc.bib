isbn = {0028-4793 (Print)},
issn = {0028-4793},
journal = {The New England journal of medicine},
pages = {453--458},
pmid = {9017937},
title = {{Association between cellular-telephone calls and motor vehicle collisions.}},
url = {http://www.nejm.org/doi/full/10.1056/nejm199702133360701},
volume = {336},
year = {1997}
}
