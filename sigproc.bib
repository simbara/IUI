@article{Terken2010,
abstract = {In this paper, we present a system that employs perceptual technologies$\backslash$n(i.e. technologies that perceive the context through sensors such$\backslash$nas cameras and microphone) to provide feedback about people's behaviour$\backslash$nin small group meetings. The system measures aspects of behaviour$\backslash$nthat are relevant to the social dynamics of the meeting, speaking$\backslash$ntime and gaze behaviour, and provides visual feedback about these$\backslash$naspects to the meeting participants through a peripheral display.$\backslash$nWe describe the system properties and the perceptual components.$\backslash$nAlso, we present a study aimed at evaluating the effect of such a$\backslash$nsystem on meeting behaviour. Groups of participants, amounting to$\backslash$n82 participants in all, discussed topics of general interest. Analysis$\backslash$nof the data of 58 participants showed that feedback influenced the$\backslash$nbehaviour of the participants in such a way that it made over-participators$\backslash$nspeak less and under-participators speak more. Analysis of the micro-patterns$\backslash$nof six participants indicated that feedback on gaze behaviour had$\backslash$nlittle effect on the interaction dynamics. We conclude that perceptual$\backslash$ntechnologies can be used to build services that may help people to$\backslash$nimprove their meeting skills and we consider some ways in which such$\backslash$nsystems may be deployed in meetings.},
